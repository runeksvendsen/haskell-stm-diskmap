  exposed-modules:      Data.DiskMap
  ghc-options:          -W -O2

  build-depends:        base                      >= 4     && < 5,
                        directory,
                        list-t,
                        stm,
                        exceptions

  hs-source-dirs:       src
  default-language:     Haskell2010
